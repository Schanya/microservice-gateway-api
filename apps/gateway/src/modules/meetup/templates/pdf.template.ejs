<!DOCTYPE html>
<html>
    <head>
        <style>
        table {
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        </style>
    </head>
    <body>
        <div style="width: 85%; margin: 0 7.5%;">
            <div style="text-align: center; padding-left: 50px;">     
              <% if (meetups.length > 0) { %>
                <h3>Meetup report</h5>
                <table>
                  <tr>
                    <td>â„–</td>
                    <td>Title</td>
                    <td>Description</td>
                    <td>Date</td>
                    <td>Place</td>
                    <td>Coordinates</td>
                  </tr>
                    <% meetups.forEach((meetup, index) => {%>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= meetup.title %></td>
                        <td><%= meetup.description %></td>
                        <td><%= meetup.date %></td>
                        <td><%= meetup.place %></td>
                        <td>
                          <p>
                            Latitude: <%= meetup.latitude %>
                          </p>
                          <p>
                            Longitude: <%= meetup.longitude %>
                          </p>
                        </td>
                      </tr>
                    <%  });%>
                </table>
              <% }%>
             </div>
        </div>
    </body>
</html>